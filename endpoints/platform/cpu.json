{
    "endpoint": {
        "name": "/cpu_usage",
        "method": "GET",
        "parameters": {
            "device_ip": {
                "required": false,
                "type": "string",
                "description": "IP address of the device"
            },
            "device_name": {
                "required": false,
                "type": "string",
                "description": "Name of the device"
            },
            "driver": {
                "required": false,
                "type": "string",
                "description": "Driver to be used to get the CPU usage"
            }
        }
    },
    "drivers": {
        "order": ["snmp", "ssh"],
        "ssh": {
            "netmiko": [
                {"vendor": "cisco", "os": "ios", "type": "router", "command_name": "cpu_usage", "command": "show processes cpu | include CPU utilization", "parse": "five minutes: (.*)", "group": 1},
                {"vendor": "cisco", "os": "ios", "type": "switch", "command_name": "interface", "command": "show ip int br", "parse": "(.*)", "group": 1},
                {"vendor": "cisco", "os": "ios2", "type": "router", "command_name": "uptime", "command": "show version", "parse": "uptime is (.*)", "group": 1},
                {"vendor": "hp", "os": "procurve", "type": "router", "command_name": "cpu_usage","command": "show cpu", "parse": "CPU utilization for five seconds: (.*)", "group": 1}
            ],
            "_comment": [
                {"vendor": "cisco", "os": "ios", "type": "router", "command_name": "cpu_usage", "command": "cpu_usage_ios.yml", "parse": "five minutes: (.*)", "group": 1},
                {"vendor": "cisco", "os": "nxos", "type": "router", "command_name": "cpu_usage", "command": "cpu_usage_nxos.yml", "parse": "five minutes: (.*)", "group": 1},
                {"vendor": "hp", "os": "procurve", "type": "router", "command_name": "cpu_usage", "command": "cpu_usage_hp.yml", "parse": "CPU utilization for five seconds: (.*)", "group": 1}
            ]
        },
        "snmp": {
            "pysnmp": [
                {"vendor": "cisco", "os": "ios", "type": "router", "command_name": "cpu_usage", "command": ".1.3.6.1.4.1.9.2.1.58", "parse": "= (.*)", "group": 1}
            ]
        }
    }
}